{
    "name": "Twitch Follow",
    "version": "1.1",
    "description": "Custom twitch alert",
    "author": "Oumbra",
    "manifest_version": 2,
    "permissions": [
        "notifications",
        "storage"
    ],
    "web_accessible_resources":[
        "assets/*.png"
    ],
    "background": {
        "scripts": [
            "background-native.js",
            "runtime.js"
        ]
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "assets/twitch-flat.png"
    }
}